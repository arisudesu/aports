# Contributor:
pkgname=makenetns
pkgver=0.1.0
pkgrel=0
pkgdesc="A helper to run processes unshared network namespaces"
url="https://github.com/arisudesu/aports/tree/master/arisu/makenetns"
arch="all"
license="MIT"
depends="iproute2"
source="Makefile
	makenetns.c
	"
options="!check"
builddir="$srcdir"

build() {
	make PREFIX=/usr
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir" \
		-C "$builddir" install
}

