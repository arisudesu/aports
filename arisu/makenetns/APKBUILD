# Contributor:
pkgname=makenetns
pkgver=0.1.0
pkgrel=1
pkgdesc="A helper to run processes unshared network namespaces"
url="https://github.com/arisudesu/aports/tree/master/arisu/makenetns"
arch="all"
license="MIT"
subpackages="$pkgname-openrc"
depends="iproute2"
source="Makefile
	makenetns.c
	makenetns.initd
	makenetns.confd
	"
options="!check"
builddir="$srcdir"

build() {
	make PREFIX=/usr
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir" \
		-C "$builddir" install

	install -D -m755 "$srcdir"/$pkgname.initd "$pkgdir"/etc/init.d/$pkgname
	install -D -m755 "$srcdir"/$pkgname.confd "$pkgdir"/etc/conf.d/$pkgname
}

