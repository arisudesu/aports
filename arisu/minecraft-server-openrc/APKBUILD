# Contributor:
pkgname=minecraft-server-openrc
pkgver=0.1.0
pkgrel=0
pkgdesc="OpenRC init scripts for Minecraft server"
url="https://github.com/arisudesu/aports/tree/master/arisu/minecraft-server"
arch="all"
license="MIT"
source="minecraft-server.initd
	minecraft-server.confd
	"
install="$pkgname.pre-install"
options="!check"

package() {
	install -D -m755 "$srcdir"/minecraft-server.initd "$pkgdir"/etc/init.d/minecraft-server
	install -D -m644 "$srcdir"/minecraft-server.confd "$pkgdir"/etc/conf.d/minecraft-server
}

